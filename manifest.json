{
    "manifest_version": 3,
    "name": "Protect Your Kids",
    "version": "0.0.1",
    "description": "Logs visited URLs and blocks blacklisted sites based on regex patterns",
    "permissions": [
      "webNavigation",
      "storage",
      "webRequest",
      "webRequestBlocking",
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }